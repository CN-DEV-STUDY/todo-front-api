<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.todo.cn.mapper.TodoMapper">
    <insert id="insert">
        insert into todo(
                         title,
                         content,
                         regDate ,
                         endDate,
                         del_yn,
                         mno,
                         uno
                         )
                values (
                        #{title},
                        #{content},
                        now(),
                        #{endDate},
                        'N',
                        #{mno},
                        #{uno}
                       )
    </insert>

    <select id="getList" resultType="com.todo.cn.controller.dto.GetTodoRes">
        select
                title,
                content,
                regDate,
                endDate,
                mno

        from todo
        where uno=#{uno} and del_yn='N'

    </select>

    <update id="update" >
        update todo
        set title=#{title},
            content=#{content},
            updateDate=now()
        where tno=#{tno}
    </update>

    <update id="delete">
        update todo set del_yn='Y' where tno=#{tno}
    </update>
</mapper>